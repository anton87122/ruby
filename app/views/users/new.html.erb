<% provide(:title, 'Sign up') %>
<h1>TRAVEL DETAILS - REQUIRED</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, html: { class: "bs-docs-example form-horizontal"}) do |f|  %>
      <div class="controls-group">	  	
	      <%= f.label :name, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :name %>
	      </div>
      </div>

      <div class="controls-group">	  	
	      <%= f.label :mail, :class => "control-label" %>
	      <div class="controls">
		      <%= f.text_field :mail %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :password, :class => "control-label" %>
	      <div class="controls">
		      <%= f.password_field :password %>
	      </div>
	  </div>
	  
	  <div class="controls-group">	  	
	      <%= f.label :password_confirmation, :class => "control-label" %>
	      <div class="controls">
		      <%= f.password_field :password_confirmation %>
	      </div>
	  </div>
	  
	  <h3>WHERE</h3>
      <div class="controls-group">	  	
	      <%= f.label "Leaving From : ", :class => "control-label" %>
	      <div class="controls">
	      	<%= f.select :from, options_from_collection_for_select(@area, :id, :name) %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label "Traveling To : ", :class => "control-label" %>
	      <div class="controls">
	      	<%= f.select :to, options_from_collection_for_select(@country, :id, :name) %>
	      </div>
	  </div>
	  
	  <h3>WHEN</h3>	
      <div class="controls-group">	  	
	      <%= f.label :departure_date, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :departure_date %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :nights, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :nights %>
	      </div>
	  </div>
	  
      <div class="controls-group">	  	
	      <%= f.label :fixed_dates, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :fixed_dates %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :flexible_dates, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :flexible_dates %>
	      </div>
	  </div>
	  
      <div class="controls-group">	  	
	      <%= f.label :adults, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :adults %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :children, :class => "control-label" %>
	      <div class="controls">
	      	<%= f.text_field :children %>
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :lead_type, :class => "control-label" %>
	      <div class="controls">
		  	<%= f.select :lead_type, options_from_collection_for_select(@lead_type, :id, :name) %>	
	      </div>
	  </div>

      <div class="controls-group">	  	
	      <%= f.label :travel_type, :class => "control-label" %>
	      <div class="controls">
		  	<%= f.select :travel_type, options_from_collection_for_select(@travel_type, :id, :name) %>	
	      </div>
	  </div>

	  <div class="controls-group">
	  	<div class="controls">
      		<%= f.submit "Next", class: "btn btn-large btn-primary" %>
      	</div>
      </div>
    <% end %>
  </div>
</div>